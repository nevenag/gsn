<virtual-sensor name="AndroidSensors" priority="10">
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensor</class-name>
        <output-structure>
            <field name="accelerometer_x" type="string"/>
	    <field name="accelerometer_y" type="string"/>
	    <field name="accelerometer_z" type="string"/>
	    <field name="pressure_x" type="string"/>
	    <field name="light_x" type="string"/>
        </output-structure>

    </processing-class>
    <description>Virtual sensor for Android phones</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="geographical">Not Specified, please edit the file
            $INSTALL_PATH/virtual-sensors/AndroidSensors.xml</predicate>
        <predicate key="LATITUDE">123</predicate>
        <predicate key="LONGITUDE">-123</predicate>
    </addressing>
    <storage history-size="1" />
    <streams>
        <stream name="input1">
            <source alias="source1" sampling-rate="1" storage-size="1">
                <address wrapper="android-push">
                    <predicate key="sampling-rate">1000</predicate>
                </address>
                <query>select * from wrapper</query>
            </source>
            <query>select * from source1</query>
        </stream>
    </streams>
</virtual-sensor>


